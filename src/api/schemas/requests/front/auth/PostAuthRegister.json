{
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "name": {
      "type": "string",
      "pattern": "^[\\w\\W가-힣]{2,20}$"
    },
    "password": {
      "type": "string",
      "pattern": "^[0-9a-zA-Z!@#$%^&*()?+-_~=\/]{6,40}$"
    },
    "phone": {
      "type": "string",
      "pattern": "^01([016789]?)([0-9]{3,4})([0-9]{4})$"
    },
    "phoneToken": {
      "type": "string"
    },
    "profileUrl": {
      "type": "string",
      "format": "uri-reference",
      "nullable": true
    }
  },
  "required": [
    "email",
    "name",
    "password",
    "phone",
    "phoneToken"
  ],
  "additionalProperties": false
}

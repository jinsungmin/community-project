{
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z가-힣](?!.*?\\s{2})[a-zA-Z가-힣 ]{4,20}[a-zA-Z가-힣]$"
    },
    "password": {
      "type": "string",
      "pattern": "^[0-9a-zA-Z!@#$%^&*()?+-_~=\/]{6,40}$"
    }
  },
  "required": [
    "email",
    "name",
    "password"
  ],
  "additionalProperties": false
}
